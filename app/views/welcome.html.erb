<div class="login-page">

<%if flash[:message] %>
	<h2 class="alert">
		<%= flash[:message] %>
	</h2>
<%end %>

	<br/>


	<h1>Recipe Box</h1>
<%= image_tag "salt.png" %>

<%= image_tag("pepper.png") %>

	
	<br/>
	<br/>

	<h3>Sign Up</h3>
	<form class="welcome-section" action="<%= users_path %>" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
		<input type="email" name="user[email]" placeholder="email">
		<input type="password" name="user[password]" placeholder="password">
		<input type="submit" name="Sign up">
	</form>

	<br/>
	<h3 >Sign In</h3>
	<form class="welcome-section" action="<%= session_path %>" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
		<input type="email" name="user[email]" placeholder="email">
		<input type="password" name="user[password]" placeholder="password">
		<input type="submit" name="Sign In">
	</form>
</div>

<div class="images">

<%= image_tag("cilantro.png") %>
<%= image_tag("bowl.png")%>
<%= image_tag("chili.png")%>


</div>